{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,  // Enable strict mode for better type checking
    "esModuleInterop": true,  // Ensure compatibility with modules that export in CommonJS style
    "skipLibCheck": true,  // Skip type checking of declaration files (helps with performance)
    "forceConsistentCasingInFileNames": true,  // Enforce consistent casing in file names
    "noEmit": true  // Disable emitting files if you're only using TypeScript for type checking
  },
  "include": ["src/**/*", "index.ts", "index.tsx"],  // Make sure the source code is included
  "exclude": ["node_modules"]
}
